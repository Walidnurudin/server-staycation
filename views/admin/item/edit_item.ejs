<div class="card shadow mb-4">
    <div class="card-body">
        <form action="/admin/item" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Title</label>
                <input type="text" class="form-control" name="title" value="<%= item.title %>" placeholder="Enter title" required>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" class="form-control" name="price" value="<%= item.price %>" placeholder="Enter price" required>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" class="form-control" name="city" value="<%= item.city %>" placeholder="Enter city" required>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select name="categoryId" class="form-control">
                    <option value="<%= item.categoryId.name %>">--- <%= item.categoryId.name %> ---</option>
                    <% for (let i=0; i < category.length; i++) { %>
                        <option value="<%= category[i].id %>"><%= category[i].name %></option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" class="form-control" name="image" multiple>
            </div>
            <div class="form-group">
                <label for="about"><%= item.description %></label>
                <textarea class="form-control" name="about"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>